#!/usr/bin/env bash
# A factors challenge

factorise()
{
	if [ $# -ne 3 ];
        then
                args=("$@")
                count=0
                product=1
                for a in ${args[*]};
                do
                        if [ $count -gt 1 ];
                        then
                                product=$(echo $a*$product | bc)
                        fi
                        count=$((count + 1))
                done
        else
                product=$3
        fi

        factor1=$2
        factor2=$(echo "$1" | tr ':' '=')

        result=$(echo "if($product > $factor1) 1 else 0" | bc)
	        if ((result == 1)); then
		        factor2cp=$factor1
		        factor1=$product
		        product=$factor2cp
                fi

        echo "$factor2$factor1*$product"
}

if [ $# -ne 1 ]
then
        echo 'Usage: factors <file>'
        exit 1
else

        while read i
        do

                result=$(factor "$i")
                factorise $result

        done < "$1"
fi
